<div class="row">
    <div class="media">
      <div class="media-left">
        <p>位</p></ br>
        <span class="badge badge-pill badge-primary">話題数</span>
      </div>
      <div class="media-body">
        <div>
          <span class="text-muted">posted at <%= @topic.created_at %></span>
        </div>
        <div class="text-center">
          <h2><%= @topic.content %></h2>
        </div>
        <div>
          ポスト
        </div>
      </div>
      <div class="media-right">
        <%= link_to '投稿', new_post_path(topic_id: @topic.id), class: 'btn btn-md btn-default' %>
      </div>
      <div class="text-center">
        <% if @topic.posts %>
          <%= render "posts/posts", posts: @posts %>
        <% end %>
      </div>
    </div>
</div>