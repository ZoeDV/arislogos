<div class="media col-md-offset-2 col-md-8">
  <div class="media-left">
    <p><%= @rank  %> 位</p></ br>
    <span class="badge badge-pill badge-primary"><%= @interest_sum[@topic.id] %></span>
  </div>
  <div class="media-body">
    <div>
      <span class="text-muted">posted at <%= @topic.created_at %></span>
    </div>
    <div class="topic-content text-center">
      <h2><%= @topic.content %></h2>
    </div>
    <div>
      ポスト
    </div>
  </div>
  <div class="media-right">
    <%= link_to '投稿', new_post_path(topic_id: @topic.id), class: 'post-button btn btn-md btn-default' %>
  </div>
  <div class="text-center">
    <% if @topic.posts %>
      <%= render "posts/posts", posts: @posts %>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>
